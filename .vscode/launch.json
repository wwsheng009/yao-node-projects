    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch yao-node-template",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "preLaunchTask": "tsc: build-template",
            "cwd": "${workspaceFolder}/packages/yao-node-template",
            "outFiles": [
                //"sourceMap": true
                "${workspaceFolder}/packages/yao-node-template/dist/**/*.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch yao-node-client",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "preLaunchTask": "tsc: build-client",
            "cwd": "${workspaceFolder}/packages/yao-node-client",
            "outFiles": [
                //"sourceMap": true
                "${workspaceFolder}/packages/yao-node-client/dist/**/*.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        }
    ]
}